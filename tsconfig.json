{
  "compilerOptions": {
    "target": "ES2023",    
    "module": "Node16", 
    "moduleResolution": "node16",                           
    "lib": ["ES2023"],                                       
    "experimentalDecorators": true,                  
    "emitDecoratorMetadata": true,                                             
    "rootDir": "./src",                                
    "baseUrl": ".",                                
    "paths": {
      "@/*": ["./src/*"]
    },                                      
    "outDir": "./dist",                                
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                         
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*"]
}
