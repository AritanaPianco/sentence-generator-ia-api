{
  "compilerOptions": {
    "target": "ES2023",    
    "module": "CommonJS",                               
    "lib": ["ES2023"],                                       
    "experimentalDecorators": true,                  
    "emitDecoratorMetadata": true,                                             
    "rootDir": "./src",                                
    "baseUrl": ".",                                
    "paths": {
      "@/*": ["./src/*"]
    },  
    "types": [
      "vitest/globals"
   ],                                    
    "outDir": "./dist",                                
    "esModuleInterop": true,                           
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                         
    "skipLibCheck": true                                 
  },
  "include": ["src/**/*"]
}
